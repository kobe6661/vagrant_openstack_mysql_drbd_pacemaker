# See usage() function below for more details ...
#
# OCF instance parameters:
#   OCF_RESKEY_binary
#   OCF_RESKEY_client_binary
#   OCF_RESKEY_config
#   OCF_RESKEY_os_username
#   OCF_RESKEY_os_password
#   OCF_RESKEY_os_tenant_name
#   OCF_RESKEY_os_auth_url
#   OCF_RESKEY_user
#   OCF_RESKEY_pid
#   OCF_RESKEY_additional_parameters
#######################################################################
# Initialization:

: ${OCF_FUNCTIONS_DIR=${OCF_ROOT}/lib/heartbeat}
. ${OCF_FUNCTIONS_DIR}/ocf-shellfuncs

#######################################################################

# Fill in some defaults if no values are specified

OCF_RESKEY_binary_default="/usr/bin/memcached"
OCF_RESKEY_config_default="/etc/memcached.conf"
OCF_RESKEY_pid_default="/var/run/memcached.pid"
OCF_RESKEY_user_default="vagrant"
OCF_RESKEY_client_binary_default="memcached"

: ${OCF_RESKEY_binary=${OCF_RESKEY_binary_default}}
: ${OCF_RESKEY_config=${OCF_RESKEY_config_default}}
: ${OCF_RESKEY_user=${OCF_RESKEY_user_default}}
: ${OCF_RESKEY_pid=${OCF_RESKEY_pid_default}}
: ${OCF_RESKEY_client_binary=${OCF_RESKEY_client_binary_default}}

#######################################################################

usage() {
    cat <<UEND
        usage: $0 (start|stop|validate-all|meta-data|status|monitor)

        $0 manages an OpenStack memcached process as an HA resource 

        The 'start' operation starts the identity service.
        The 'stop' operation stops the identity service.
        The 'validate-all' operation reports whether the parameters are valid
        The 'meta-data' operation reports this RA's meta-data information
        The 'status' operation reports whether the identity service is running
        The 'monitor' operation reports whether the identity service seems to be working

UEND
}

meta_data() {
    cat <<END
<?xml version="1.0"?>
<!DOCTYPE resource-agent SYSTEM "ra-api-1.dtd">
<resource-agent name="memcached">
<version>1.0</version>

<longdesc lang="en">
Resource agent for the MemChached (memcached)
May manage a memcached-all instance or a clone set that 
creates a distributed memcached cluster.
</longdesc>
<shortdesc lang="en">Manages the MemChached (memcached)</shortdesc>
<parameters>

<parameter name="binary" unique="0" required="0">
<longdesc lang="en">
Location of the MemChached server binary (memcachedd)
</longdesc>
<shortdesc lang="en">memcached server binary (memcached-all)</shortdesc>
<content type="string" default="${OCF_RESKEY_binary_default}" />
</parameter>

<parameter name="client_binary" unique="0" required="0">
<longdesc lang="en">
Location of the MemChached client binary (memcached)
</longdesc>
<shortdesc lang="en">memcached server binary (memcached)</shortdesc>
<content type="string" default="${OCF_RESKEY_client_binary_default}" />
</parameter>

<parameter name="config" unique="0" required="0">
<longdesc lang="en">
Location of the MemChached configuration file
</longdesc>
<shortdesc lang="en">memcached configuration file</shortdesc>
<content type="string" default="${OCF_RESKEY_config_default}" />
</parameter>

<parameter name="os_username" unique="0" required="0">
<longdesc lang="en">
The username to use when logging into memcached for monitoring purposes
</longdesc>
<shortdesc lang="en">memcached monitoring login</shortdesc>
<content type="string" />
</parameter>

<parameter name="os_password" unique="0" required="0">
<longdesc lang="en">
The password to use when logging into memcached for monitoring purposes
</longdesc>
<shortdesc lang="en">memcached monitoring password</shortdesc>
<content type="string" />
</parameter>

<parameter name="os_tenant_name" unique="0" required="0">
<longdesc lang="en">
The tenant to use when logging into memcached for monitoring purposes
</longdesc>
<shortdesc lang="en">memcached monitoring tenant</shortdesc>
<content type="string" />
</parameter>

<parameter name="os_auth_url" unique="0" required="0">
<longdesc lang="en">
The URL pointing to this memcached instance to use when logging in for monitoring purposes
</longdesc>
<shortdesc lang="en">memcached URL for monitoring login</shortdesc>
<content type="string" />
</parameter>

<parameter name="user" unique="0" required="0">
<longdesc lang="en">
User running MemChached (memcached)
</longdesc>
<shortdesc lang="en">MemChached (memcached) user</shortdesc>
<content type="string" default="${OCF_RESKEY_user_default}" />
</parameter>

<parameter name="pid" unique="0" required="0">
<longdesc lang="en">
The pid file to use for this memcached instance (memcached-all)
</longdesc>
<shortdesc lang="en">MemChached (memcached) pid file</shortdesc>
<content type="string" default="${OCF_RESKEY_pid_default}" />
</parameter>

<parameter name="additional_parameters" unique="0" required="0">
<longdesc lang="en">
Additional parameters to pass on to the memcached server (memcached-all)
</longdesc>
<shortdesc lang="en">Additional parameters for the memcached server</shortdesc>
<content type="string" />
</parameter>

</parameters>

<actions>
<action name="start" timeout="20" />
<action name="stop" timeout="20" />
<action name="status" timeout="20" />
<action name="monitor" timeout="30" interval="20" />
<action name="validate-all" timeout="5" />
<action name="meta-data" timeout="5" />
</actions>
</resource-agent>
END
}

#######################################################################
# Functions invoked by resource manager actions

memcached_validate() {
    local rc

    check_binary $OCF_RESKEY_binary
    check_binary $OCF_RESKEY_client_binary

    # A config file on shared storage that is not available
    # during probes is OK.
    if [ ! -f $OCF_RESKEY_config ]; then
        if ! ocf_is_probe; then
            ocf_log err "Config $OCF_RESKEY_config doesn't exist"
            return $OCF_ERR_INSTALLED
        fi
        ocf_log_warn "Config $OCF_RESKEY_config not available during a probe"
    fi

    getent passwd $OCF_RESKEY_user >/dev/null 2>&1
    rc=$?
    if [ $rc -ne 0 ]; then
        ocf_log err "User $OCF_RESKEY_user doesn't exist"
        return $OCF_ERR_INSTALLED
    fi

    true
}

memcached_status() {
    local pid
    local rc

    if [ ! -f $OCF_RESKEY_pid ]; then
        ocf_log info "MemChached (memcached) is not running"
        return $OCF_NOT_RUNNING
    else
        pid=`cat $OCF_RESKEY_pid`
    fi

    ocf_run -warn kill -s 0 $pid
    rc=$?
    if [ $rc -eq 0 ]; then
        return $OCF_SUCCESS
    else
        ocf_log info "Old PID file found, but MemChached (memcached) is not running"
        return $OCF_NOT_RUNNING
    fi
}

memcached_monitor() {
    local rc

    memcached_status
    rc=$?

    # If status returned anything but success, return that immediately
    if [ $rc -ne $OCF_SUCCESS ]; then
        return $rc
    fi

    # Check whether we are supposed to monitor by logging into memcached
    # and do it if that's the case.
    if [ -n "$OCF_RESKEY_client_binary" ]; then
        ocf_run -q sudo $OCF_RESKEY_client_binary \
        -p 11211 > /dev/null 2>&1
        rc=$?
        if [ $rc -ne 0 ]; then
            ocf_log err "Failed to connect to the MemChached (memcached): $rc"
            return $OCF_NOT_RUNNING
        fi
    fi
    
    ocf_log debug "MemChached (memcached) monitor succeeded"
    return $OCF_SUCCESS
}

memcached_start() {
    local rc

    memcached_status
    rc=$?
    if [ $rc -eq $OCF_SUCCESS ]; then
        ocf_log info "MemChached (memcached) already running"
        return $OCF_SUCCESS
    fi

    # run the actual memcached daemon. Don't use ocf_run as we're sending the tool's output
    # straight to /dev/null anyway and using ocf_run would break stdout-redirection here.
    #su ${OCF_RESKEY_user} -s /bin/sh -c "${OCF_RESKEY_binary} --config-file $OCF_RESKEY_config \
     # $OCF_RESKEY_additional_parameters"' >> /dev/null 2>&1 & echo $!' > $OCF_RESKEY_pid

    sudo /bin/sh -c "sudo service memcached restart"
    # Spin waiting for the server to come up.
    # Let the CRM/LRM time us out if required
    while true; do
    sleep 1
    memcached_monitor
    rc=$?
    if [ $rc -eq $OCF_SUCCESS ]; then 
        break
    fi
    if [ $rc -ne $OCF_NOT_RUNNING ]; then 
        ocf_log err "MemChached (memcached) start failed"
        exit $OCF_ERR_GENERIC
    fi
    done 

    #sudo /bin/sh -c "sudo rm -rf /var/run/memcached/memcached.pid"
    #sudo /bin/sh -c "sudo touch 0777 /var/run/memcached/memcached.pid"
    #sudo /bin/sh -c "sudo chown vagrant:vagrant /var/run/memcached/memcached.pid"
    #done

    ocf_log info "MemChached (memcached) started"
    return $OCF_SUCCESS
}

memcached_stop() {
    local rc
    local pid

    memcached_status
    rc=$?
    if [ $rc -eq $OCF_NOT_RUNNING ]; then
        ocf_log info "MemChached (memcached) already stopped"
        return $OCF_SUCCESS
    fi

    # Try SIGTERM
    pid=`cat $OCF_RESKEY_pid`
    ocf_run kill -s TERM $pid
    rc=$?
    if [ $rc -ne 0 ]; then
        ocf_log err "MemChached (memcached) couldn't be stopped"
        exit $OCF_ERR_GENERIC
    fi

    # stop waiting
    shutdown_timeout=15
    if [ -n "$OCF_RESKEY_CRM_meta_timeout" ]; then
        shutdown_timeout=$((($OCF_RESKEY_CRM_meta_timeout/1000)-5))
    fi
    count=0
    while [ $count -lt $shutdown_timeout ]; do
        memcached_status
        rc=$?
        if [ $rc -eq $OCF_NOT_RUNNING ]; then
            break
        fi
        count=`expr $count + 1`
        sleep 1
        ocf_log debug "MemChached (memcached) still hasn't stopped yet. Waiting ..."
    done

    memcached_status
    rc=$?
    if [ $rc -ne $OCF_NOT_RUNNING ]; then
        # SIGTERM didn't help either, try SIGKILL
        ocf_log info "MemChached (memcached) failed to stop after ${shutdown_timeout}s \
          using SIGTERM. Trying SIGKILL ..."
        ocf_run kill -s KILL $pid
    fi

    ocf_log info "MemChached (memcached) stopped"
    rm -f $OCF_RESKEY_pid

    return $OCF_SUCCESS
}

#######################################################################

case "$1" in
  meta-data)    meta_data
                exit $OCF_SUCCESS;;
  usage|help)   usage
                exit $OCF_SUCCESS;;
esac

# Anything except meta-data and help must pass validation
memcached_validate || exit $?

# What kind of method was invoked?
case "$1" in
  start)        memcached_start;;
  stop)         memcached_stop;;
  status)       memcached_status;;
  monitor)      memcached_monitor;;
  validate-all) ;;
  *)            usage
                exit $OCF_ERR_UNIMPLEMENTED;;
esac

